{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".next/dev/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "lib/irs-direct-file/direct-file/**/*",
    "lib/irs-direct-file/fact-graph-scala/**/*",
    "lib/irs-direct-file/df-client/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**/*",
    "**/test/**/*",
    "**/tests/**/*",
      "**/dist/**/*",
      "**/build/**/*",
      "**/coverage/**/*",
      "**/target/**/*",
      "**/*.tsbuildinfo",
      "lib/services/analytics/freelance-analytics.service.ts",
      "lib/services/bill-pay/bill-pay-service-backup.ts",
      "lib/services/business/agency-client-service.ts",
      "lib/services/business/ar-aging-service.ts",
      "lib/services/business/audio-recording.service.ts",
      "lib/services/business/folder-sharing.service.ts",
      "lib/services/business/freelance-invoicing.service.ts",
      "lib/services/business/freelance-project-service.ts",
      "lib/services/business/freelance-project.service.ts",
      "lib/services/business/lifecycle-management.service.ts",
      "lib/services/business/proposal.service.ts",
      "lib/services/business/project-profitability-service.ts",
      "lib/services/business/segmentation-service.ts",
      "lib/services/business/stock.service.ts",
      "lib/services/business/timesheet.service.ts"
  ]
}
