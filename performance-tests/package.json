{
  "name": "financbase-performance-tests",
  "version": "1.0.0",
  "description": "Performance testing suite for FinancBase Admin Dashboard",
  "scripts": {
    "test:load": "k6 run k6-load-test.js",
    "test:stress": "k6 run stress-test.js", 
    "test:endpoints": "k6 run endpoint-specific-test.js",
    "test:ultra-high": "k6 run ultra-high-load-test.js",
    "test:all": "npm run test:load && npm run test:stress && npm run test:endpoints",
    "test:scale": "npm run test:ultra-high",
    "test:load:local": "BASE_URL=http://localhost:3010 k6 run k6-load-test.js",
    "test:stress:local": "BASE_URL=http://localhost:3010 k6 run stress-test.js",
    "test:endpoints:local": "BASE_URL=http://localhost:3010 k6 run endpoint-specific-test.js",
    "test:ultra-high:local": "BASE_URL=http://localhost:3010 k6 run ultra-high-load-test.js",
    "test:scale:local": "BASE_URL=http://localhost:3010 k6 run ultra-high-load-test.js",
    "test:load:staging": "BASE_URL=https://staging.financbase.com k6 run k6-load-test.js",
    "test:stress:staging": "BASE_URL=https://staging.financbase.com k6 run stress-test.js",
    "test:endpoints:staging": "BASE_URL=https://staging.financbase.com k6 run endpoint-specific-test.js",
    "test:load:production": "BASE_URL=https://app.financbase.com k6 run k6-load-test.js",
    "test:stress:production": "BASE_URL=https://app.financbase.com k6 run stress-test.js",
    "test:endpoints:production": "BASE_URL=https://app.financbase.com k6 run endpoint-specific-test.js",
    "install-k6": "npm install -g k6",
    "setup": "npm run install-k6",
    "report": "open performance-results.html",
    "clean": "rm -f *.json *.html"
  },
  "devDependencies": {
    "k6": "^0.0.0"
  },
  "keywords": [
    "performance",
    "testing",
    "load-testing",
    "stress-testing",
    "k6",
    "financbase"
  ],
  "author": "FinancBase Team",
  "license": "MIT"
}
