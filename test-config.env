# Test Environment Configuration
# This file contains test-specific environment variables

# Test User Credentials for E2E Testing
TEST_USER_EMAIL=test@financbase.com
TEST_USER_PASSWORD=TestPassword123!

# Test Database Configuration
TEST_DB_TYPE=local-postgres
TEST_DB_URL=postgresql://test:test@localhost:5432/financbase_test

# Test API Configuration
TEST_API_BASE_URL=http://localhost:3010
TEST_API_TIMEOUT=30000

# Test Coverage Configuration
TEST_COVERAGE_THRESHOLD=80
TEST_COVERAGE_REPORTERS=text,json,html

# Performance Testing Configuration
K6_VUS=20
K6_DURATION=30s
K6_RAMP_UP=5s
K6_RAMP_DOWN=5s

# Test Data Configuration
TEST_DATA_SEED_COUNT=100
TEST_DATA_REALISTIC=true
TEST_DATA_INCLUDE_EDGE_CASES=true

# Authentication Testing
TEST_AUTH_PROVIDER=clerk
TEST_AUTH_BYPASS=false
TEST_AUTH_TIMEOUT=30000

# Browser Testing Configuration
TEST_BROWSER_HEADLESS=true
TEST_BROWSER_SLOW_MO=0
TEST_BROWSER_TIMEOUT=30000

# Mock Services Configuration
TEST_MOCK_EXTERNAL_APIS=true
TEST_MOCK_EMAIL_SERVICE=true
TEST_MOCK_PAYMENT_SERVICE=true
TEST_MOCK_AI_SERVICE=true

# Test Reporting
TEST_REPORT_FORMAT=html
TEST_REPORT_OUTPUT_DIR=test-results
TEST_REPORT_INCLUDE_SCREENSHOTS=true
TEST_REPORT_INCLUDE_VIDEOS=false
