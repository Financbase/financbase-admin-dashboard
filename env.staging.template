# Financbase Admin Dashboard - Staging Environment
# Copy this file to .env.staging and fill in your staging values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=staging
NEXT_PUBLIC_APP_URL=https://staging.financbase.com
PORT=3010

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================
# Use staging Clerk application
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_staging_publishable_key_here
CLERK_SECRET_KEY=sk_live_your_staging_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_your_staging_webhook_secret_here

# =============================================================================
# DATABASE
# =============================================================================
# Staging Database (separate from production)
DATABASE_URL=postgresql://staging_user:staging_password@staging_host:port/staging_database?sslmode=require

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI API Key (use staging/test keys if available)
OPENAI_API_KEY=sk-your_staging_openai_api_key_here

# Anthropic Claude API Key
ANTHROPIC_API_KEY=sk-ant-your_staging_anthropic_api_key_here

# Google Gemini API Key
GOOGLE_AI_API_KEY=your_staging_google_ai_api_key_here

# =============================================================================
# EMAIL SERVICES
# =============================================================================
# Resend API Key (use staging environment)
RESEND_API_KEY=re_your_staging_resend_api_key_here

# =============================================================================
# SEARCH & ANALYTICS
# =============================================================================
# Algolia Search (staging index)
NEXT_PUBLIC_ALGOLIA_APP_ID=your_staging_algolia_app_id
ALGOLIA_ADMIN_KEY=your_staging_algolia_admin_key
ALGOLIA_SEARCH_KEY=your_staging_algolia_search_key

# PostHog Analytics (staging project)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_staging_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
# UploadThing (staging environment)
UPLOADTHING_SECRET=sk_live_your_staging_uploadthing_secret_here
UPLOADTHING_APP_ID=your_staging_uploadthing_app_id_here

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry Error Tracking (staging project)
SENTRY_DSN=https://your_staging_sentry_dsn_here@sentry.io/staging_project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=financbase-staging
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
# Arcjet Security (staging environment)
ARCJET_KEY=ajkey_your_staging_arcjet_key_here

# =============================================================================
# COLLABORATION & REAL-TIME
# =============================================================================
# PartyKit (staging deployment)
NEXT_PUBLIC_PARTYKIT_HOST=financbase-staging.partykit.dev
PARTYKIT_SECRET=your_staging_partykit_secret_here

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test Mode (disabled in staging)
TEST_MODE=false

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# Stripe (staging/test keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_staging_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_staging_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_staging_stripe_webhook_secret

# Webhook endpoints
WEBHOOK_SECRET=your_staging_webhook_secret_here

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================
# Docker settings
DOCKER_REGISTRY=your_registry.com
DOCKER_IMAGE_TAG=staging

# Health check
HEALTH_CHECK_URL=https://staging.financbase.com/api/health

# =============================================================================
# STAGING SPECIFIC
# =============================================================================
# Staging database backup
STAGING_DB_BACKUP_URL=postgresql://backup_user:backup_password@backup_host:port/backup_database

# Staging monitoring
STAGING_MONITORING_URL=https://staging-monitoring.financbase.com
STAGING_LOGS_URL=https://staging-logs.financbase.com
