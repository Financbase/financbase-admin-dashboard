# Local Development Environment Variables
# Copy this file to .env.local and fill in the actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application URL for local development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================

# Clerk authentication keys (get from your Clerk dashboard)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Clerk webhook secret for user events (optional for local dev)
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret_here

# =============================================================================
# DATABASE (Local PostgreSQL or Neon)
# =============================================================================

# Local development database URL
# For local PostgreSQL: postgresql://username:password@localhost:5432/financbase_dev
# For Neon: postgresql://username:password@hostname/database?sslmode=require
DATABASE_URL=postgresql://username:password@localhost:5432/financbase_dev

# Database driver selection (auto|neon|pool) - auto-detects based on DATABASE_URL
DB_DRIVER=auto

# =============================================================================
# AI SERVICES
# =============================================================================

# AI Provider Configuration (choose one)
# Options: openai, google, anthropic, claude
AI_PROVIDER=openai

# AI Model Selection
AI_MODEL=gpt-4o-mini

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Alternative AI Providers (optional)
# Google Gemini API Key (get from https://aistudio.google.com/app/apikey)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Anthropic Claude API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# AI Analysis Settings
AI_MAX_RETRIES=3
AI_TIMEOUT=30000
AI_TAGGING_ENABLED=true

# =============================================================================
# EMAIL (Resend)
# =============================================================================

# Resend API key for email functionality (optional for local development)
RESEND_API_KEY=re_your_resend_api_key_here

# From email address for sending emails
RESEND_FROM_EMAIL=test@localhost

# =============================================================================
# SEARCH (Algolia)
# =============================================================================

# Algolia application credentials (optional for local development)
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id_here
ALGOLIA_ADMIN_KEY=your_algolia_admin_key_here

# =============================================================================
# FILE STORAGE (UploadThing)
# =============================================================================

# UploadThing configuration (optional for local development)
UPLOADTHING_SECRET=sk_live_your_uploadthing_secret_here
UPLOADTHING_APP_ID=your_uploadthing_app_id_here

# =============================================================================
# ANALYTICS (PostHog)
# =============================================================================

# PostHog analytics (optional for local development)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# ERROR TRACKING (Sentry)
# =============================================================================

# Sentry DSN for error tracking (optional for local development)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry organization and project (optional)
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# =============================================================================
# SECURITY (Arcjet)
# =============================================================================

# Arcjet API key for rate limiting and security (optional for local development)
ARCJET_KEY=ajkey_your_arcjet_key_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Build optimization flags
ANALYZE=false
NODE_ENV=development

# Enable development features
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_ENABLE_QUERY_LOGGING=true

# Redis URL for caching (optional, defaults to memory)
REDIS_URL=redis://localhost:6379

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features for development
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_REAL_TIME_FEATURES=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=false

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level for development
LOG_LEVEL=debug

# Enable request logging in development
ENABLE_REQUEST_LOGGING=true

# Slack webhook for error notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# =============================================================================
# TESTING
# =============================================================================

# Test mode settings (for development testing)
TEST_MODE=false
TEST_USER_EMAIL=
