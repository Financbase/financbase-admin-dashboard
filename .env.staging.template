# Staging Environment Variables Template
# Copy this file to .env.staging and fill in the actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Staging application URL
NEXT_PUBLIC_APP_URL=https://your-staging-domain.com

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================

# Clerk authentication keys (staging environment)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_staging
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_staging

# Clerk webhook secret for user events
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret_staging

# =============================================================================
# DATABASE (Neon PostgreSQL - Staging)
# =============================================================================

# Database driver selection (auto|neon|pool) - auto-detects based on DATABASE_URL
DB_DRIVER=auto
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Staging database URL (Neon PostgreSQL)
DATABASE_URL=postgresql://staging_user:staging_password@staging_host:port/staging_database?sslmode=require

# =============================================================================
# AI SERVICES (OpenAI)
# =============================================================================

# OpenAI API key for AI features
OPENAI_API_KEY=sk-your_openai_api_key_staging

# OpenAI organization ID
OPENAI_ORG_ID=org-your_openai_org_id

# =============================================================================
# EMAIL (Resend)
# =============================================================================

# Resend API key for email functionality
RESEND_API_KEY=re_your_resend_api_key_staging

# From email address for sending emails
RESEND_FROM_EMAIL=noreply@your-staging-domain.com

# =============================================================================
# SEARCH (Algolia)
# =============================================================================

# Algolia application credentials
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id_staging
ALGOLIA_ADMIN_KEY=your_algolia_admin_key_staging

# =============================================================================
# FILE STORAGE (UploadThing)
# =============================================================================

# UploadThing configuration
UPLOADTHING_SECRET=sk_live_your_uploadthing_secret_staging
UPLOADTHING_APP_ID=your_uploadthing_app_id_staging

# =============================================================================
# ANALYTICS (PostHog)
# =============================================================================

# PostHog analytics for staging
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key_staging
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# ERROR TRACKING (Sentry)
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn-staging@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-staging@sentry.io/project-id

# Sentry organization and project
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project-staging

# =============================================================================
# SECURITY (Arcjet)
# =============================================================================

# Arcjet API key for rate limiting and security
ARCJET_KEY=ajkey_your_arcjet_key_staging

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Vercel deployment URL (automatically set by Vercel)
NEXT_PUBLIC_VERCEL_URL=

# Build optimization flags
ANALYZE=false
NODE_ENV=production

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================

# Enable performance monitoring in staging
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Database query logging (disabled in staging for performance)
NEXT_PUBLIC_ENABLE_QUERY_LOGGING=false

# Redis URL for caching
REDIS_URL=redis://staging-redis-host:6379

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features for staging
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_REAL_TIME_FEATURES=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Stripe for payments (staging/test keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key_staging
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_staging
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_staging

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy for staging
CSP_HEADER="default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://cdn.jsdelivr.net https://js.stripe.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.openai.com https://api.resend.com https://*.algolia.net https://*.algolianet.com;"

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level for staging
LOG_LEVEL=info

# Enable request logging in staging
ENABLE_REQUEST_LOGGING=true

# Slack webhook for error notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
