# Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars should be in .gitignore

environment = "production"
project_name = "financbase-admin-dashboard"
domain_name = "financbase.com"
aws_region = "us-east-1"

# Provider credentials
vercel_api_token = "your-vercel-api-token"
neon_api_key = "your-neon-api-key"
cloudflare_api_token = "your-cloudflare-api-token"

# GitHub repository
github_repo = "your-org/financbase-admin-dashboard"

# Application secrets
clerk_publishable_key = "pk_live_..."
clerk_secret_key = "sk_live_..."
sentry_dsn = "https://...@sentry.io/..."

# Neon configuration
neon_region = "aws-us-east-1"

# AWS configuration (if using Redis)
aws_vpc_id = "vpc-xxxxxxxxx"
aws_vpc_cidr = "10.0.0.0/16"
aws_subnet_ids = ["subnet-xxxxxxxxx", "subnet-yyyyyyyyy"]

# Redis configuration
redis_node_type = "cache.t3.micro"
redis_num_nodes = 2

# Monitoring
alert_email_addresses = ["alerts@financbase.com"]

