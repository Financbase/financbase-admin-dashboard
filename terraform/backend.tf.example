# Terraform Backend Configuration Examples
# Copy the appropriate backend configuration to backend.tf

# ============================================
# Option 1: AWS S3 Backend (Recommended)
# ============================================
terraform {
  backend "s3" {
    bucket         = "financbase-terraform-state"
    key            = "production/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
    dynamodb_table = "terraform-state-lock"
    
    # Optional: Use different backends per environment
    # key = "${terraform.workspace}/terraform.tfstate"
  }
}

