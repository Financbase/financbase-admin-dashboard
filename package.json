{
  "name": "financbase-admin-dashboard",
  "version": "2.0.0",
  "description": "A comprehensive financial management platform with advanced automation, integrations, and analytics capabilities.",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "rm -rf .next node_modules/.cache && next dev",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:analyze": "./scripts/analyze-test-coverage.sh",
    "test:coverage:check": "node scripts/check-coverage-thresholds.js",
    "test:coverage:summary": "node scripts/generate-coverage-summary.js",
    "test:coverage:weekly": "node scripts/generate-weekly-coverage-report.js",
    "test:ci": "vitest --ci --coverage",
    "test:e2e": "dotenv -e .env.test.local -- playwright test",
    "test:e2e:ui": "dotenv -e .env.test.local -- playwright test --ui",
    "test:performance": "jest --testPathPattern=performance",
    "test:performance:load": "./performance-tests/run-load-tests.sh",
    "test:performance:load:comprehensive": "./performance-tests/run-comprehensive-load-tests.sh",
    "test:performance:load:quick": "BASE_URL=${BASE_URL:-http://localhost:3010} k6 run performance-tests/quick-load-test.js",
    "test:performance:monitor": "./performance-tests/monitor-performance.sh",
    "test:performance:api": "BASE_URL=${BASE_URL:-http://localhost:3010} k6 run performance-tests/api-load-test.js",
    "test:performance:dashboard": "BASE_URL=${BASE_URL:-http://localhost:3010} k6 run performance-tests/dashboard-load-test.js",
    "test:performance:auth": "BASE_URL=${BASE_URL:-http://localhost:3010} k6 run performance-tests/auth-load-test.js",
    "test:performance:comprehensive": "BASE_URL=${BASE_URL:-http://localhost:3010} k6 run performance-tests/comprehensive-load-test.js",
    "test:comprehensive": "./test-comprehensive.sh",
    "test:security": "./test-security.sh",
    "test:critical": "vitest run __tests__/api/critical-*.test.ts",
    "test:all": "npm run test:comprehensive && npm run test:security",
    "verify:pre-deploy": "./scripts/pre-deployment-verify.sh",
    "verify:pre-deploy:production": "./scripts/pre-deployment-verify.sh production",
    "monitor:sentry": "./scripts/monitor-sentry.sh",
    "check:links": "node scripts/check-links.js",
    "check:docs-links": "node scripts/check-docs-links.js",
    "check:external-links": "node scripts/check-external-links.js",
    "check:performance": "node scripts/check-performance.js",
    "lighthouse": "node scripts/lighthouse-performance-check.js",
    "lighthouse:home": "node scripts/lighthouse-performance-check.js http://localhost:3000/home",
    "check:all": "npm run check:links && npm run check:performance",
    "check:audit": "npm run check:links && npm run check:performance",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:verify": "tsx scripts/verify-database-schema.ts",
    "env:verify": "tsx scripts/verify-environment-variables.ts",
    "api:docs": "node scripts/generate-openapi.js",
    "analyze": "ANALYZE=true next build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "openapi:generate": "node scripts/generate-openapi.js",
    "openapi:view": "./scripts/view-api-docs.sh",
    "optimize:images": "node scripts/optimize-images.js",
    "optimize:images:public": "node scripts/optimize-images.js --input-dir=./public --output-dir=./public/optimized",
    "verify:responsive-ui": "node scripts/verify-responsive-ui.js",
    "copyright:check": "node scripts/add-copyright-headers.js --check",
    "copyright:add": "node scripts/add-copyright-headers.js",
    "copyright:dry-run": "node scripts/add-copyright-headers.js --dry-run",
    "worker:dev": "wrangler dev workers/websocket.ts",
    "worker:deploy": "wrangler deploy --env production",
    "worker:deploy:staging": "wrangler deploy --env staging",
    "worker:deploy:dev": "wrangler deploy --env development",
    "worker:tail": "wrangler tail --env production",
    "direct-file:setup-env": "./scripts/setup-direct-file-env.sh",
    "direct-file:start": "./scripts/start-direct-file-services.sh",
    "direct-file:stop": "./scripts/stop-direct-file-services.sh",
    "direct-file:health": "./scripts/check-direct-file-health.sh",
    "direct-file:backend:start": "cd lib/irs-direct-file/direct-file && ./scripts/start-services.sh",
    "direct-file:backend:stop": "cd lib/irs-direct-file/direct-file && ./scripts/stop-services.sh",
    "direct-file:backend:restart": "./scripts/stop-direct-file-backend-services.sh; sleep 2; ./scripts/start-direct-file-backend-services.sh",
    "direct-file:backend:status": "./scripts/status-direct-file-backend-services.sh",
    "direct-file:start:all": "START_BACKEND=true ./scripts/start-direct-file-services.sh",
    "direct-file:backend:health": "cd lib/irs-direct-file/direct-file && ./scripts/health-check.sh",
    "prepare": "husky install"
  },
