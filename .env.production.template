# Financbase Admin Dashboard - Production Environment
# Copy this file to .env.production and fill in your production values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://app.financbase.com
PORT=3010

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================
# Production Clerk application
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_production_publishable_key_here
CLERK_SECRET_KEY=sk_live_your_production_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_your_production_webhook_secret_here

# =============================================================================
# DATABASE
# =============================================================================
# Production Database
DATABASE_URL=postgresql://production_user:production_password@production_host:port/production_database?sslmode=require

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI API Key (production)
OPENAI_API_KEY=sk-your_production_openai_api_key_here

# Anthropic Claude API Key
ANTHROPIC_API_KEY=sk-ant-your_production_anthropic_api_key_here

# Google Gemini API Key
GOOGLE_AI_API_KEY=your_production_google_ai_api_key_here

# =============================================================================
# EMAIL SERVICES
# =============================================================================
# Resend API Key (production)
RESEND_API_KEY=re_your_production_resend_api_key_here

# =============================================================================
# SEARCH & ANALYTICS
# =============================================================================
# Algolia Search (production)
NEXT_PUBLIC_ALGOLIA_APP_ID=your_production_algolia_app_id
ALGOLIA_ADMIN_KEY=your_production_algolia_admin_key
ALGOLIA_SEARCH_KEY=your_production_algolia_search_key

# PostHog Analytics (production)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_production_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# FILE UPLOAD & STORAGE
# =============================================================================
# UploadThing (production)
UPLOADTHING_SECRET=sk_live_your_production_uploadthing_secret_here
UPLOADTHING_APP_ID=your_production_uploadthing_app_id_here

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry Error Tracking (production)
SENTRY_DSN=https://your_production_sentry_dsn_here@sentry.io/production_project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=financbase-production
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
# Arcjet Security (production)
ARCJET_KEY=ajkey_your_production_arcjet_key_here

# =============================================================================
# COLLABORATION & REAL-TIME
# =============================================================================
# PartyKit (production)
NEXT_PUBLIC_PARTYKIT_HOST=financbase.partykit.dev
PARTYKIT_SECRET=your_production_partykit_secret_here

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Test Mode (disabled in production)
TEST_MODE=false

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# Stripe (production keys)
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_stripe_webhook_secret

# Webhook endpoints
WEBHOOK_SECRET=your_production_webhook_secret_here

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================
# Docker settings
DOCKER_REGISTRY=your_registry.com
DOCKER_IMAGE_TAG=production

# Health check
HEALTH_CHECK_URL=https://app.financbase.com/api/health

# =============================================================================
# PRODUCTION SPECIFIC
# =============================================================================
# Production database backup
PRODUCTION_DB_BACKUP_URL=postgresql://backup_user:backup_password@backup_host:port/backup_database

# Production monitoring
PRODUCTION_MONITORING_URL=https://monitoring.financbase.com
PRODUCTION_LOGS_URL=https://logs.financbase.com

# CDN and static assets
CDN_URL=https://cdn.financbase.com
STATIC_ASSETS_URL=https://assets.financbase.com

# SSL and security
SSL_CERT_PATH=/etc/ssl/certs/financbase.com.crt
SSL_KEY_PATH=/etc/ssl/private/financbase.com.key

# Load balancing
LOAD_BALANCER_URL=https://lb.financbase.com
