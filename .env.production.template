# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application URL (required for production)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================

# Clerk authentication keys (required)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Clerk webhook secret for user events
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret

# =============================================================================
# DATABASE (Neon PostgreSQL)
# =============================================================================

# Production database URL (required)
DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require

# Database connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# =============================================================================
# AI SERVICES (OpenAI)
# =============================================================================

# OpenAI API key for AI features (required for AI functionality)
OPENAI_API_KEY=sk-your_openai_api_key

# OpenAI organization ID (optional)
OPENAI_ORG_ID=org-your_openai_org_id

# =============================================================================
# EMAIL (Resend)
# =============================================================================

# Resend API key for email functionality (required for email features)
RESEND_API_KEY=re_your_resend_api_key

# From email address for sending emails
RESEND_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# SEARCH (Algolia)
# =============================================================================

# Algolia application credentials (required for search functionality)
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_ADMIN_KEY=your_algolia_admin_key

# =============================================================================
# FILE STORAGE (UploadThing)
# =============================================================================

# UploadThing configuration (required for file uploads)
UPLOADTHING_SECRET=sk_live_your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id

# =============================================================================
# ANALYTICS (PostHog)
# =============================================================================

# PostHog analytics (optional but recommended)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# ERROR TRACKING (Sentry)
# =============================================================================

# Sentry DSN for error tracking (required for production monitoring)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry organization and project
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# =============================================================================
# SECURITY (Arcjet)
# =============================================================================

# Arcjet API key for rate limiting and security (required)
ARCJET_KEY=ajkey_your_arcjet_key

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Vercel deployment URL (automatically set by Vercel)
NEXT_PUBLIC_VERCEL_URL=

# Build optimization flags
ANALYZE=false
NODE_ENV=production

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================

# Enable performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Database query logging (set to false in production for performance)
NEXT_PUBLIC_ENABLE_QUERY_LOGGING=false

# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_REAL_TIME_FEATURES=true
NEXT_PUBLIC_ENABLE_ADVANCED_ANALYTICS=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Stripe for payments (optional)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy (customize for your domain)
CSP_HEADER="default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://cdn.jsdelivr.net https://js.stripe.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.openai.com https://api.resend.com https://*.algolia.net https://*.algolianet.com;"

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=false

# Slack webhook for error notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
