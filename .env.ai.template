# AI Configuration for Image Analysis
# Add these to your .env.local file

# AI Provider (choose one)
# Options: openai, google, anthropic, claude
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4o-mini

# Google AI Configuration (alternative to OpenAI)
GOOGLE_API_KEY=your_google_api_key_here
# AI_MODEL=gemini-1.5-flash

# Anthropic/Claude Configuration (alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# AI_MODEL=claude-3-5-sonnet-20241022

# AI Analysis Settings
AI_MAX_RETRIES=3
AI_TIMEOUT=30000

# Enable AI tagging by default
AI_TAGGING_ENABLED=true

# Image Optimization Settings (existing)
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85
IMAGE_FORMAT=webp

# UploadThing Configuration (existing)
UPLOADTHING_SECRET=your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id
